@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi Tablosu</h3>
</div>

<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Resim</th>

                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ServiceId
                    </td>
                    <td class="budget">
                        @item.Title
                    </td>

                    <td>
                        @item.ImageUrl
                    </td>

                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
                </tr>

            }


        </tbody>
    </table>
    <br />
    <a href="/Service/AddService/" class="btn btn-primary">Yeni Deneyim EKle</a>
</div>
